@model IEnumerable<Server.Models.Document>

@{
    ViewBag.Title = "ドキュメント";
}

<h2>ドキュメント一覧</h2>

<div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>タイトル</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.Title, "Details", new { name = item.Name })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
